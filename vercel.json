{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb" 
            }
        },
        {
            "src": "static/**/*",
            "use": "@vercel/static"
        }
    ],
    "installCommand": "pip install -r requirements.txt",

    "env": {
        "VERCEL_BUILD_ENV": "production",
        "PYTHON_VERSION": "3.9" 
    },
    
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ]
}
